@model List<LinqStructure.Entities.Post>

@{
    ViewData["Title"] = "PostDetails";
}

<h2>PostDetails</h2>

<div>
    <h4>Post</h4>
    <hr />
    
    <dl class="dl-horizontal">
        @foreach (var post in Model)
        {
            <dt>
                @Html.Label("Post title:")
            </dt>
            <dd>
                @Html.Label(post.Title)
            </dd>
            <dt>
                @Html.Label("Number of comments:")
            </dt>
            <dt>
                @Html.Label(post.Comments.Count.ToString())
            </dt>
            <hr/>
        }
    </dl>
</div>
<div>
