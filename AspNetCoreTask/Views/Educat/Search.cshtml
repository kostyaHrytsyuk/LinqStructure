
@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<div class="container">
    <div class="accordion-option">
        <h3 class="title">Choose the method you need, enter value and click "Search" button</h3>
        @*<a href="javascript:void(0)" class="toggle-accordion active" accordion-id="#accordion"></a>*@
    </div>
    <div class="clearfix"></div>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingOne">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Search Posts
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                <div class="panel-body">
                    @using (Html.BeginForm("GetUserPosts", "Educat"))
                    {
                        <p>
                            <h5>Enter User Id</h5> <input type="number" name="userId" />
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </p>
                    }
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                        Search Comments
                    </a>
                </h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                <div class="panel-body">
                    @using (Html.BeginForm("GetCommentsForUserPosts", "Educat"))
                    {
                        <p>
                            <h5>Enter User Id</h5> <input type="number" name="userId" />
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </p>
                    }
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingThree">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                        Search Todos
                    </a>
                </h4>
            </div>
            <div id="collapseThree" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingThree">
                <div class="panel-body">
                    @using (Html.BeginForm("GetDoneTodos", "Educat"))
                    {
                        <p>
                            <h5>Enter User Id</h5> <input type="number" name="userId" />
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </p>
                    }
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingFour">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                        Search Users
                    </a>
                </h4>
            </div>
            <div id="collapseFour" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingFour">
                <div class="panel-body">
                    @using (Html.BeginForm("SearchUsers", "Educat"))
                    {
                        <p>
                            <input class="btn btn-primary" type="submit" value="Get Users" />
                        </p>
                    }
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingFive">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFive" aria-expanded="true" aria-controls="collapseFive">
                        Search Expanded Post Info
                    </a>
                </h4>
            </div>
            <div id="collapseFive" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingFive">
                <div class="panel-body">
                    @using (Html.BeginForm("PostXDetails", "Educat"))
                    {
                        <p>
                            <h5>Enter Post Id</h5> <input type="number" name="postId" />
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </p>
                    }
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingSix">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseSix" aria-expanded="true" aria-controls="collapseSix">
                        Search Expanded User Info
                    </a>
                </h4>
            </div>
            <div id="collapseSix" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingSix">
                <div class="panel-body">
                    @using (Html.BeginForm("UserXDetails", "Educat"))
                    {
                        <p>
                            <h5>Enter User Id</h5> <input type="number" name="userId" />
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


