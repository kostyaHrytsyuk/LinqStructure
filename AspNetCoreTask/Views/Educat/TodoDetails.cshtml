@model List<LinqStructure.Entities.Todo>

@{
    ViewData["Title"] = "TodoDetails";
}

<h2>TodoDetails</h2>

<div>
    <h4>Todo</h4>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var todo in Model)
        {
            <dt>
                @Html.Label("Todo id:")
            </dt>
            <dd>
                @Html.Label(todo.Id.ToString())
            </dd>
            <dt>
                @Html.Label("Todo name:")
            </dt>
            <dd>
                @Html.Label(todo.Name)
            </dd>
            <hr />
        }
    </dl>
</div>
